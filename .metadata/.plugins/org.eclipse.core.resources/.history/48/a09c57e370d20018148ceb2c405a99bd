;*******************************************************************
;* This stationery serves as the framework for a user application. *
;* For a more comprehensive program that demonstrates the more     *
;* advanced functionality of this processor, please see the        *
;* demonstration applications, located in the examples             *
;* subdirectory of the "Freescale CodeWarrior for HC08" program    *
;* directory.                                                      *
;*******************************************************************

; Include derivative-specific definitions
            INCLUDE 'derivative.inc'
            
;
; export symbols
;
            XDEF _Startup
            ABSENTRY _Startup

;
; variable/data section
;
            ORG    Z_RAMStart         ; Insert your data definition here
SEG: 			DS.B   1
MIN: 			DS.B   1
HRS: 			DS.B   1
EDO:			DS.B	1
BCD_SEG:		DS.B	1
BCD_MIN:		DS.B	1
BCD_HRS:		DS.B	1

;
; code section
;
            ORG    ROMStart
            

_Startup:	LDHX   #RAMEnd+1        ; initialize the stack pointer
            TXS
            LDA		SOPT1
            AND		#$3F
            STA		SOPT1
            
            BSR		INIT
            
            CLI			; enable interrupts

mainLoop:	LDA		EDO
			CBEQA	#$01,EDO1
            BRA    mainLoop
			
EDO1:		BSR		CAL_TIME
			BSR		MANDA_TIME
			MOV		#$0,EDO
			BRA		mainLoop
			

INIT:		MOV		#$1D,RTCSC
			MOV		#$0A,RTCMOD
			
			CLR		SEG
			CLR		MIN
			CLR		HRS
			CLR		EDO
			
			MOV		#$04,SCIBDL
			MOV		#$0C,SCIC2
			RTS

CAL_TIME:	LDA		SEG
			BSR		SPLIT_DIG
			STA		BCD_SEG
			LDA		MIN
			BSR		SPLIT_DIG
			STA		BCD_MIN
			LDA		HRS
			BSR		SPLIT_DIG
			STA		BCD_HRS
			RTS
			
MANDA_TIME:	LDA		BCD_HRS
			BSR		SENDBCD
			BSR		SEND2P
			LDA		BCD_MIN
			BSR		SENDBCD
			BSR		SEND2P
			LDA		BCD_SEG
			BSR		SENDBCD
			BSR		SENDCR
			RTS

SENDBCD:	PSHA
			LSRA
			LSRA
			LSRA
			LSRA
			ADD		#$30
			BSR		SENDCHAR
			PULA
			AND		#$0F
			ADD		#$30
			BSR		SENDCHAR
			RTS	
			
SEND2P:		LDA		#':'
			BRA		SENDCHAR
SENDCR:		LDA		#0A
			BRA		SENDCHAR
			
SENDCHAR:	BRCLR	7,SCIS1,*
            STA		SCID
			RTS
			
SPLIT_DIG:	CLRH
			LDX		#$0A
			DIV
			LSLA
			LSLA
			LSLA
			LSLA
			PSHA
			PSHH
			PULA
			ADD 	1,SP
			PULH
			RTS
						
			
			
;**************************************************************
;*                 Interrupt SERVICE RUTINE - RTC             *
;**************************************************************			
			
ISRRTC:		PSHH
			BSET	7,RTCSC
			INC		SEG
			LDA		SEG
			CBEQA	#60,PLUS_MIN
			BRA		FINISRRTC

PLUS_MIN:	CLR		SEG
			INC		MIN
			LDA		MIN
			CBEQA	#60,PLUS_HRS
			BRA		FINISRRTC			

PLUS_HRS:	CLR		MIN
			INC		HRS
			LDA		HRS
			CBEQA	#25,PLUS_DAY
			BRA		FINISRRTC	

PLUS_DAY:	CLR		HRS
			
FINISRRTC:	MOV		#$01,EDO
			PULH
			RTI			


;**************************************************************
;*                 Interrupt Vectors                          *
;**************************************************************
			ORG		$FFCC
			DC.W	ISRRTC
            ORG		$FFFE
            DC.W  	_Startup			; Reset
